{
  "manifest_version": 2,

  "name": "Web annotation tool",
  "description": "You can highlight and comment on the texts and images on web",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
    "icons": {
      "32": "icon.png",
      "64": "icon.png",
      "128": "icon.png"
  },
  "background":   {
    "page": "background.html"
    },

    "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["annotator-full.1.2.10/annotator.min.css"],
      "js": ["jquery.js", "annotator-full.1.2.10/annotator-full.min.js", "background.js"]
    }
  ]
}
  